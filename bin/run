#!/usr/bin/env node

const path = require('path');
const Server = require('arpen').Server;

let argv = process.argv.slice(2);
if (!argv.length) {
    console.error('Usage:\trun <server-name> [... <server-name>]');
    process.exit(1);
}

const server = new Server(path.join(__dirname, '..'), argv);
server.run(...argv);
